<p id="notice"><%= notice %></p>

<h1>Measures</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Patient name</th>
      <th>Date</th>
      <th>Time</th>
      <th>Temperature</th>
      <th>Oxi levels</th>
      <th>Heart rate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measures.each do |measure| %>
      <tr>
        <td><%= measure.Patient_Name %></td>
        <td><%= measure.Date %></td>
        <td><%= measure.Time %></td>
        <td><%= measure.Temperature %></td>
        <td><%= measure.Oxi_Levels %></td>
        <td><%= measure.Heart_Rate %></td>
        <td><%= link_to 'Show', measure %></td>
        <td><%= link_to 'Edit', edit_measure_path(measure) %></td>
        <td><%= link_to 'Destroy', measure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

